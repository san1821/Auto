doctype html 
html(lang='en') 
  head
    link(href="https://fonts.googleapis.com/css?family=Raleway:400,600,700,800", rel="stylesheet")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(type='text/javascript', src='app.js')
    link(rel="shortcut icon", type="image/png", href="./favicon-new.png")
    title MX API Checker
    style.
      html, body {
        margin: 0px;
        padding: 0px;
        
        height: 100%;
        width: 100%;
      }
      html, body, input, button {
        font-family: 'Raleway', sans-serif;
      }
      * {
        box-sizing: border-box;
      }
      a {
        text-decoration: none;
        color: #fff;
      }
      #main-content {
        width: 100%;
        height: 100%;
      }
      .main {
        height: 100%;
        width: 100%;
      }
      .sidebar {
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 250px;
        padding: 20px;
        background-color: #222d31;
        box-shadow: 0 0 5px #333;
        color: #fff;
      }
      .app-header {
        font-size: 27px;
        font-weight: 800;
        text-align: center;
        color: #00e278;
      }
      .section-header {
        margin-top: 50px;
      }
      .section-item {
        font-size: 18px;
        font-weight: 600;
        padding: 20px 0;
        cursor: pointer;
      }
      .active-sidebar .section-item {
        color: #f39c12;
      }
      .app-content {
        padding-left: 250px;
        height: 100%;
        width: 100%;
      }
      .section-content {
        padding: 30px 15px;
      }
      .content-header {
        font-size: 40px;
        font-weight: 600;
        padding-bottom: 10px;
        text-shadow: 0 0 2px #000;
        text-align: center;
      }
      .content-main {
        margin-top: 20px;
      }
      .inline {
        display: inline-block;
        vertical-align: middle;
      }
      .inline-top {
        display: inline-block;
        vertical-align: top;      
      }
      .api-header {
        padding: 15px;
        font-size: 20px;
        font-weight: 700;
        background-color: #222d31;
      }
      .api-attr-header {
        color: #f39c12;
        min-width: 150px;
        margin-right: 30px;
      }
      .api-item {
        border: 1px solid #222d31;
        margin-top: -1px;
        font-weight: 600;
        font-size: 14px;
        max-height: 56px;
        transition: 0.5s max-height;
        overflow: hidden;
        cursor: pointer;
      }
      .api-item.open {
        max-height: initial;
      }
      .api-item-header {
        padding: 15px;
        position: relative;
      }
      .api-attr {
        min-width: 150px;
        margin-right: 30px;
      }
      .api-url {
        width: 350px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
      }
      .api-attr.small, .api-attr-header.small {
        min-width: 75px;
      }
      .api-run, .api-run-all {
        background-color: #222d31;
        color: #fff;
        border: 0px;
        outline: none;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 2px;
        cursor: pointer;
        box-shadow: 0 0 5px #000;      
      }
      .api-run-all {
        font-size: 18px;      
        background-color: #f39c12;
      }
      .api-test-result {
        color: #00e278;
        font-weight: 800;
      }
      .api-test-result.error-item {
        color: #dc0000;
        font-weight: 800;
      }
      .open-item {
        width: 10px;
        height: 10px;
        border-top: 2px solid #222d31;
        border-right: 2px solid #222d31;
        position: absolute;
        right: 50px;
        top: 50%;
        transition: 0.5s transform;
        transform: translateY(-50%) rotate(135deg);
      }
      .api-item.open>.api-item-header>.open-item, .page.open>.page-header>.open-item {
        transform: translateY(-50%) rotate(-45deg);
      }
      .api-item-content {
        padding: 15px;
        color: #666;
      }
      .api-detail-item {
        width: 50%;
        padding: 10px 0;
      }
      .api-detail-header {
        width: 100px;
      }
      .final-report, .error-report {
        font-size: 20px;
        margin: 40px 40px 20px 0;
        color: #e6e6e6;
        font-weight: 800;
        cursor: pointer;
      }
      .final-report.active, .error-report.active {
        color: #000;
      }
      .jsonater-item {
        padding-left: 20px;
        font-size: 11px;
        font-weight: 700;
      }
      .jsonater-item.inline-top {
        margin-right: 30px;
        margin-bottom: 30px;
      }
      .jsonater-item {
        line-height: 24px;
      }
      .jsonater-key-value {
        font-weight: 700;
        color: #000;
        margin-right: 10px;
      }
      .jsonater-attr {
        color: #04c04a;
      }
      .jsonater-attr.error {
        color: #dc0000;
      }
      .jsonater-attr:not(:last-child):after {
        content: ',';
        margin-right: 5px;
      }
      .jsonater-triangle {
        background-size: cover;
        background-image: url('https://image.flaticon.com/icons/png/128/31/31128.png');
        height: 10px;
        width: 10px;
        margin-right: 10px;
        transition: 0.2s transform;
      }
      .jsonater-value {
        max-height: initial;
        transition: 0.2s max-height;
        overflow: hidden
      }
      .jsonater-value.hidden {
        max-height: 0px;
      }
      .jsonater-item.open>.jsonater-triangle {
        transform: rotate(90deg);
      }
      .error-report {
        font-size: 14px;
        font-weight: 600;
      }
      .error {
        margin-bottom: 50px;
        width: 50%;
      }
      .error-attr {
        padding-left: 50px;
      }
      .error-property {
        line-height: 20px;
      }
      .error-header {
        width: 100px;
        color: #dc0000;
      }
      .error-value, .no-error, .error-index {
        color: #000;
      }
      .error-path-item:not(:last-child):after {
        content: "->";
        display: inline-block;
        vertical-align: top;
        margin: 0 5px;
      }

      .paginator {
        margin-top: 20px;
      }
      .paginator-header {
        padding: 10px;
        font-size: 16px;
        font-weight: 700;
        background-color: #222d31;
      }
      .paginator-header .page-attr {
        color: #f39c12;
      }
      .page-header {
        position: relative;
      }
      .page-attr {
        min-width: 150px;
        margin-right: 30px;
      }
      .page-attr.page-url {
        width: 500px;
      }
      .page {
        line-height: 20px;
        padding: 10px;
        border: 1px solid #222d31;
        margin-top: -1px;
      }
      .page-status {
        color: #00e278;
      }
      .page-status.page-attr-error {
        color: #dc0000;
        font-weight: 800;
      }
  body
    div(id='main-content')