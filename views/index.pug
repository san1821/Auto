doctype html 
html(lang='en') 
  head
    link(href="https://fonts.googleapis.com/css?family=Poppins:300,400,600,700", rel="stylesheet")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(type='text/javascript', src='app.js')
    style.
      html, body {
        margin: 0px;
        padding: 0px;
      }
      * {
        box-sizing: border-box;
      }
      .header-container {
        text-align: center;
        background-color: #3C8CF0;
        color: #fff;
        font-size: 35px;
        line-height: 70px;
        font-style: italic;
        border-bottom: 2px solid;
      }
      .api-list-content {
        width: 100%;
      }
      .api-list-header {
        font-size: 18px;
      }
      .api-list-header, .api-row {
        border: 1px solid #3C8CF0;
        color: #000;
        margin-top: -1px;
      }
      .api-list-header {
        font-weight: bold;
        background-color: #3C8CF0;
        color: #FFF;
      }
      .column {
        display: inline-block;
        width: 20%;
        line-height: 50px;
        padding: 0 5px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
        padding-left: 25px;
      }
      .run-test-btn {
        border: none;
        background-color: #8e8757;
        color: #fff;
        padding: 8px 20px;
        font-size: 16px;
        width: 130px;
      }
      .result-table, .error-result-container {
        display: none;
      }
      .result-tab-container.all .result-table{
        display: block;
      }
      .result-tab-container.error .error-result-container{
        display: block;
      }
      .tabs {
        border: 1px solid #7f7f7f;
        margin: 30px 90px;
      }
      .tab-header-container {
        background-color: grey;
        color: white;
        font-size: 20px;
        margin-bottom:50px;
      }
      .tab-header {
        display: inline-block;
        vertical-align: top;
        padding: 15px 295px;
      }
      .tab-header.active {
        color: #ffb721;
      }
      .result-table {
        margin-top: 10px;
        padding-left: 50px;
      }
      .result-row {
        border: 1px solid #000;
        margin-top: -1px;
        padding: 5px 0;
      }
      .result-row.header .result-column {
        font-weight: bold;
      }
      .result-column {
        display: inline-block;
        vertical-align: top;
        text-align: center;
        max-width: 200px;
        min-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      .result-column.correct {
        font-weight: bold;
        color: #1cee5b;
      }
      .result-column.incorrect {
        font-weight: bold;
        color: red;
      }
      .error-result-container {
        padding: 0px 50px 40px 215px;
      }
      .error {
        line-height: 34px;
      }
      .childName {
        line-height: 45px;
        margin: 15px 10px;
        font-weight: 100px;
      }
      .list-container, .detail-container {
        display: inline-block;
      }
      .list-container {
        width: 80%;
      }
      .detail-container {
        width: 20%;
      }
      .page-container {
        max-width: 100%;
      }

  body
    div(id='main-content')

    script.
      window._state = !{state}    // from index.js and app.js is from dist/app.js